<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="9dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorTextSecond"/>

    <EditText
        android:id="@+id/NameCreateField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="32dp"
        android:gravity="center"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_marginStart="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toRightOf="@+id/textView"
        android:hint="Название"
        android:textSize="16sp"
        android:textColorHint="@color/colorTextSecond"
        android:textColor="@color/colorAccent"
        android:textColorLink="@color/colorAccent"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:layout_below="@+id/NameCreateField"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textColor="@color/colorTextSecond"/>

    <TextView
        android:id="@+id/DateCreateField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_alignLeft="@+id/NameCreateField"
        android:layout_alignStart="@+id/NameCreateField"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignRight="@+id/NameCreateField"
        android:layout_alignEnd="@+id/NameCreateField"
        android:textColor="@color/colorTextSecond"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Статус"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="16sp"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorTextSecond"/>

    <TextView
        android:id="@+id/StateCreateField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Выполняется"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="16sp"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignLeft="@+id/DateCreateField"
        android:layout_alignStart="@+id/DateCreateField"
        android:layout_alignRight="@+id/DateCreateField"
        android:layout_alignEnd="@+id/DateCreateField"
        android:textColorHint="@color/colorTextSecond"/>


    <LinearLayout
        android:id="@+id/linearLayoutCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="16dp"
        android:padding="4dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_above="@+id/recyclerView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Дела"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/addSubShowTaskButtonOnCreate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_add_black_24dp"
            android:layout_marginRight="16dp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewOnCreate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/linearLayoutCreate"
        android:background="@color/colorPrimaryDark">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>